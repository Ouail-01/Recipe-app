<%= form_with url: "/recipies/#{params[:recipy_id]}/recipe_foods", model: @recipe_foods, method: :post do |form| %>

<section class="new-ingredient">

<h1>New Form for Ingredient</h1>
<div>
<%= form.label :quantity %>
<%= form.number_field :quantity %>

<%= form.label :food_id%>
<%= form.select :food_id, Food.all.map {|f| [f.name, f.id]} %>

<%= form.submit 'Add Ingredient' %>

<% end %>
</div>
</section>
