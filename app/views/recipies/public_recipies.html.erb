<section>
<h1>Public Recipes</h1>

<% if @is_public.length > 0 %>
  <% @is_public.each do |recipe| %>
    <%= link_to "#{recipe.name}", "/recipies/#{recipe.id}" %>
    <p>by: <%= recipe.user.name %></p>
    <p>Total food Items: <%= recipe.recipe_foods.length %></p>

    <% total_price = 0 %>
    <% recipe.recipe_foods.each do |food| %>
      <% total_price += food.food.price %>
    <% end %>
    <p>Total price: <%= number_to_currency(total_price) %></p>
  <% end %>
<% else %>
  <h2>No Public Recipes</h2>
<% end %>
</section>
